    "paths": {
        "/v1/user/verify_phone_code": {
            "post": {
                "tags": [
                    "V1",
                    "User",
                    "Session"
                ],
                "description": "Verify phone code sended received from reset_password SMS \n",
                "parameters": [
                    {
                        "name": "code",
                        "in": "formData",
                        "required": true,
                        "description": "Code received from SMS",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Code successfuly verified\n",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "default": "Code successfuly verified"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/register": {
            "post": {
                "tags": [
                    "V1",
                    "User",
                    "Session"
                ],
                "description": "Post `User` object.\n",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "`User` object\n",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "user": {
                                    "$ref": "#/definitions/User"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "`User` is created.\n",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/v1/user/login": {
            "post": {
                "tags": [
                    "V1",
                    "User",
                    "Session"
                ],
                "description": "Login `User` with phone and password.\n",
                "parameters": [
                    {
                        "name": "mobile_number",
                        "required": true,
                        "in": "formData",
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "required": true,
                        "in": "formData",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful.",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/v1/user/reset_password": {
            "post": {
                "tags": [
                    "V1",
                    "User",
                    "Session"
                ],
                "description": "Send reset password request.\n",
                "parameters": [
                    {
                        "name": "mobile_number",
                        "required": true,
                        "in": "formData",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Request sended successfuly.",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "default": "You should receive SMS with your new password\n"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/feedback": {
            "post": {
                "tags": [
                    "V1"
                ],
                "description": "Send feedback\n",
                "parameters": [
                    {
                        "name": "message",
                        "in": "formData",
                        "required": true,
                        "description": "Message sended from feedback text box",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Feedback successfully created",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "default": "Feedback successfully created\n"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/favorites": {
            "get": {
                "tags": [
                    "V1"
                ],
                "responses": {
                    "200": {
                        "description": "List of `Users`s favorites `Salon`s\n",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Salon"
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "V1"
                ],
                "description": "Add `Salon` to `User` favorite list\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "formData",
                        "description": "`id` of `Salony`",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "`Salony` succesfully added"
                    }
                }
            }
        },
        "/v1/user/upcoming_appointments": {
            "get": {
                "tags": [
                    "V1"
                ],
                "responses": {
                    "200": {
                        "description": "List of `User`s upcoming `Appointment`s \nordered by created_at in DESC\n",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Appointment"
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/past_appointments": {
            "get": {
                "tags": [
                    "V1"
                ],
                "responses": {
                    "200": {
                        "description": "List of `User`s past `Appointment`s\nordered by created_at in DESC\n",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Appointment"
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/add_credit_card": {
            "post": {
                "tags": [
                    "V1"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "number": {
                                    "type": "string"
                                },
                                "expiration_year": {
                                    "type": "string"
                                },
                                "expiration_month": {
                                    "type": "string"
                                },
                                "security_code": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Credit card successfully added",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/categories": {
            "get": {
                "tags": [
                    "V1"
                ],
                "responses": {
                    "200": {
                        "description": "List of all `Category`s\n",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                }
            }
        },
        "/v1/appointments/{id}": {
            "delete": {
                "tags": [
                    "V1"
                ],
                "description": "Cancel `User` `Appointment` \n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Appointment id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Appointment successfuly deleted"
                    }
                }
            }
        },
        "/v1/salons": {
            "get": {
                "tags": [
                    "V1",
                    "Salons",
                    "Implemented"
                ],
                "description": "List of `Salon`s.\nIf filters are passed then you will receive filtered\nlist of `Salon`s. You can pass pagination parameters via\n`page` and `per_page`. There are pagination headers.\n",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "q[name_start]",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "q[city_eq]",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "q[neighbourhood_eq]",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "q[price_gteq]",
                        "in": "query",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "q[price_lteq]",
                        "in": "query",
                        "required": false,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of `Salon`s",
                        "headers": {
                            "Link": {
                                "type": "string",
                                "description": "Link to the next and last pages"
                            },
                            "Per-Page": {
                                "type": "integer",
                                "description": "Number of `Salon`s presented on page"
                            },
                            "Total": {
                                "type": "integer",
                                "description": "Total number of `Salon`s which matched the request"
                            }
                        },
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/SalonJSON"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "V1",
                    "Implemented",
                    "Salons"
                ],
                "description": "Create a `Salon`.\n",
                "parameters": [
                    {
                        "name": "salon",
                        "in": "body",
                        "description": "Salon",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "salon": {
                                    "$ref": "#/definitions/Salon"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Created",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/SalonJSON"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation is not passed",
                        "schema": {
                            "$ref": "#/definitions/ErrorsJSON"
                        }
                    }
                }
            }
        },
        "/v1/salons/{id}": {
            "get": {
                "tags": [
                    "V1",
                    "Salons",
                    "Implemented"
                ],
                "description": "Details of concrete `Salon`\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id of Salon",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of `Salon`",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/SalonJSON"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/salons/{id}/book": {
            "post": {
                "tags": [
                    "V1",
                    "Salons"
                ],
                "description": "Book list of selected `Services`\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "services": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "stylist_id": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Booking successfuly created",
                        "schema": {
                            "$ref": "#/definitions/Appointment"
                        }
                    }
                }
            }
        },
        "/v1/salons/{id}/set_image": {
            "patch": {
                "tags": [
                    "V1",
                    "Implemented",
                    "Salons"
                ],
                "description": "Set image of `Salon`",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "description": "File",
                        "type": "file",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of `Salon`",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/SalonJSON"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/salons/{id}/set_hours": {
            "patch": {
                "tags": [
                    "V1",
                    "Implemented",
                    "Salons"
                ],
                "description": "Set working hours for `Salon`",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id",
                        "type": "string"
                    },
                    {
                        "name": "hours",
                        "in": "body",
                        "description": "hours",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "hours": {
                                    "$ref": "#/definitions/SalonHours"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of `Salon`",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/SalonJSON"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
